<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                <h3 class="panel-title">{{model.name}}</h3>
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                <div class="btn-group  btn-group-xs btn-group-justified" role="group">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-danger" {{action 'deleteCompany'}}>{{fa-icon "remove"}}</button>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-success" {{action 'saveCompany' this}}>{{fa-icon "check"}}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form>
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group">
                        <label>Company Name</label>
                        {{input type="text" value=model.name class="form-control" placeholder="Name"}}
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        {{input type="text" value=model.description class="form-control" placeholder="Description"}}
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group">
                        <label>Parent</label>
                        {{input type="text" value=model.type class="form-control" placeholder="Type"}}
                    </div>
                    <div class="form-group">
                        <label>Type</label>
                        {{input type="text" value=model.parent class="form-control" placeholder="Parent"}}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h3 class="panel-title">Address</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        <label>Street 1</label>
                                        {{input type="text" value=model.address.street1 class="form-control" placeholder="Street 1"}}
                                    </div>
                                    <div class="form-group">
                                        <label>Street 2</label>
                                        {{input type="text" value=model.address.street2 class="form-control" placeholder="Street 2"}}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                    <div class="form-group">
                                        <label>City</label>
                                        {{input type="text" value=model.address.city class="form-control" placeholder="City"}}
                                    </div>
                                </div>
                                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                    <div class="form-group">
                                        <label>State</label>
                                        {{view "us-states-select"
                                        class="form-control"
                                        outlying=false
                                        armedForce=false
                                        value=model.address.state}}
                                    </div>
                                </div>
                                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                    <div class="form-group">
                                        <label>Zip</label>
                                        {{input type="text" value=model.address.zip class="form-control" placeholder="Zip"}}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        <label>Type</label>
                                        {{input type="text" value=model.address.type class="form-control" placeholder="Type"}}
                                    </div>
                                    <div class="form-group">
                                        <label>Description</label>
                                        {{input type="text" value=model.address.description class="form-control" placeholder="Description"}}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                    <div class="form-group">
                                        <label>Latitude</label>
                                        {{input type="text" value=model.address.lat class="form-control" placeholder="Latitude"}}
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                    <div class="form-group">
                                        <label>Longitude</label>
                                        {{input type="text" value=model.address.lon class="form-control" placeholder="Longitude"}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h3 class="panel-title">Phones</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                    {{input type="text" value=phoneType class="form-control"}}
                                </div>
                                <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
                                    {{phone-number-input unmaskedValue=phoneNumber extensions=true class="form-control"}}
                                </div>
                                <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                                    <a class="btn btn-success btn-block" {{action 'addPhone'}}>{{fa-icon "plus"}}</a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Type</th>
                                                <th>Number</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each model.phone as |phone|}}
                                            <tr>
                                                <td><span>{{phone.type}}</span></td>
                                                <td><span>{{phone.prettyPhone}}</span></td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>