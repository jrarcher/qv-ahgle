<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                {{#link-to 'company.index' tagName="span"}}{{fa-icon "chevron-left" title="Back"}}Back{{/link-to}}
            </div>
            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                <h3 class="panel-title">
                {{model.name}}
                </h3>
            </div>
            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                {{#link-to 'company.edit' tagName="span"}}{{fa-icon "pencil" border=true pull="right"}}{{/link-to}}
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Type</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">{{model.type}}</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Description</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">{{model.description}}</p>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Parent</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">
                            {{#if model.parent}}
                            {{model.parent}}
                            {{else}}
                            None
                            {{/if}}
                            </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Created</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">{{model.prettyCreated}}</p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Address</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <span>{{model.address.description}}</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <span>{{model.address.type}}</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <span>{{model.address.street1}}</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <span>{{model.address.street2}}</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <span>{{model.address.cityState}}</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <span>{{model.address.zip}}</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <span>{{model.address.country}}</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <span>Lat: {{model.address.lat}}</span>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <span>Lon: {{model.address.lon}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <div class="panel panel-primary">
                    <!-- Default panel contents -->
                    <div class="panel-heading">Phones</div>

                    <!-- Table -->
                    <table class="table table-bordered">
                        <tbody>
                            {{#each model.phone as |phone|}}
                            <tr>
                                <td>{{phone.type}}</td>
                                <td>{{phone.prettyNumber}}</td>
                            </tr>                              
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Statistics</h3>
    </div>
    <div class="panel-body">
        Information about company usage and stats
    </div>
</div>