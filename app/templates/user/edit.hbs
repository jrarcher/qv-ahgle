<div class="panel panel-primary">
	  <div class="panel-heading">
        <div class="row">
            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                <h3 class="panel-title">{{model.username}}</h3>
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                <div class="btn-group  btn-group-xs btn-group-justified" role="group">
                  <div class="btn-group" role="group">
                    <button type="button" class="btn btn-danger" {{action 'cancelEdit'}}>{{fa-icon "remove"}}</button>
                  </div>
                  <div class="btn-group" role="group">
                    <button type="button" class="btn btn-success" {{action 'saveEdit' this}}>{{fa-icon "check"}}</button>
                  </div>
                </div>
            </div>
        </div>
	  </div>
	  <div class="panel-body">
			<form>
				<div class="row">
					<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
						<form class="form-horizontal">
   						<div class="form-group">
                        <label class="col-sm-2 control-label">Birthdate</label>
                        <div class="col-sm-10">
                            {{date-picker date=model.birth format='MM-DD-YYYY' class="form-control"}}
                        </div>
                    </div>
						</form>
					</div>
					<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
						<div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Rights</h3>
                    </div>
                    <!-- Table -->
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>&nbsp;</th>
                                <th class="text-center">View</th>
                                <th class="text-center">Edit</th>
                                <th class="text-center">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                        	{{#with model.right as right}}
                            <tr>
                                <td>User</td>
                                <td class="user-rights-toggle text-center">{{x-toggle value=right.canViewUser toggled="right.canViewUser"}}</td>
                                <td class="user-rights-toggle text-center">{{x-toggle value=right.canEditUser toggled="right.canEditUser"}}</td>
                                <td class="user-rights-toggle text-center">{{x-toggle value=right.canDeleteUser toggled="right.canDeleteUser"}}</td>
                            </tr>
                            <tr>
                                <td>Company</td>
                                <td class="user-rights-toggle text-center">{{x-toggle value=right.canViewCompany toggled="right.canViewCompany"}}</td>
                                <td class="user-rights-toggle text-center">{{x-toggle value=right.canEditCompany toggled="right.canEditCompany"}}</td>
                                <td class="user-rights-toggle text-center">{{x-toggle value=right.canDeleteCompany toggled="right.canDeleteCompany"}}</td>
                            </tr>
                            <tr>
                                <td>Survey</td>
                                <td class="user-rights-toggle text-center">{{x-toggle value=right.canViewSurvey toggled="right.canViewSurvey"}}</td>
                                <td class="user-rights-toggle text-center">{{x-toggle value=right.canEditSurvey toggled="right.canEditSurvey"}}</td>
                                <td class="user-rights-toggle text-center">{{x-toggle value=right.canDeleteSurvey toggled="right.canDeleteSurvey"}}</td>
                            </tr>
                            {{/with}}
                        </tbody>
                    </table>
                </div>
					</div>
				</div>
				<div class="row">
					
				</div>

			</form>
	  </div>
</div>